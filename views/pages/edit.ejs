<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../partials/head'); %>
      
    <title>Edit an Existing Trip</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
      body {
        font: 20px "Raleway", sans-serif;
        line-height: 1.8;
        color: #f0e4d7;
      }
      p {font-size: 16px;}
      .margin {margin-bottom: 45px;}
  
    
      h1 {
          letter-spacing: 6px;
          text-transform: uppercase;
          font: 100px "Raleway", sans-serif;
          color: rgb(255, 255, 255);
      }
    
      h2 {
        letter-spacing: 5px;
          text-transform: none;
          font: 50px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
      }
    
      h3 {
        letter-spacing: 5px;
          text-transform: uppercase;
          font: 40px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
      }
    
      h4 {
        letter-spacing: 5px;
          text-transform: none;
          font: 35px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
      }
    
      h5 {
        letter-spacing: 5px;
          text-transform: none;
          font: 20px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
      }
       p {
        letter-spacing: 5px;
          text-transform: none;
          font: 20px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
       }
    
       li {
        letter-spacing: 4px;
          text-transform: none;
          font: 15px "Raleway", sans-serif;
          color: rgb(0, 0, 0); 
       }
  
    label {
        letter-spacing: 5px;
        text-transform: none;
        font: 25px "Raleway", sans-serif;
        color: rgb(0, 0, 0);   
      }
  
      input {
          letter-spacing: 1px;
          text-transform: none;
          font: 25px "Raleway", sans-serif;
          color: rgb(0, 0, 0);   
      }
  
      button {
        border: 1px solid rgb(0, 0, 0);
        background-color: #002521;
        color: rgb(255, 255, 255);
        padding: 12px 28px;
        font: 25px "Raleway", sans-serif;
        letter-spacing: 5px;
        cursor: pointer;
        border-radius: 12px;
      }
    
      .bg-2 { 
        background-image: linear-gradient(#d7eaf0, rgb(255, 255, 255));
        color: #000000;
      }
  
      
      .bg-3 { 
        background-color: #ffffff; 
      }
      .bg-4 { 
        background-color: #2f2f2f;
        color: #fff;
      }
      .container-fluid {
        padding-top: 70px;
        padding-bottom: 70px;
      }
      .navbar {
        padding-top: 15px;
        padding-bottom: 15px;
        border: 0;
        border-radius: 0;
        margin-bottom: 0;
        font-size: 12px;
        letter-spacing: 5px;
      }
      .navbar-nav  li a:hover {
        color: #002521 !important;
      }
      </style>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
      <div class="container-fluid bg-2 text-center">
        <h2>Add a Trip</h2>
          <br>
          <br>
          <br>
          <div class="text-left">
            <form action="/add_trip" method="POST">
                <label>Destination ID:</label>
                <input type='text' id='destinationid' name="destinationid" required placeholder="4" />
                <br>
                <br>
                <br>
                <label>Transportation:</label>
                <input type='text' id='transportation' name="transportation" required placeholder="Car" />
                <br>
                <br>
                <br>
                <label>Start Date:</label>
                <input type='text' id='startdate' name="startdate" required placeholder="MM-DD-YYYY" />
                <br>
                <br>
                <br>
                <label>End Date:</label>
                <input type='text' id='enddate' name="enddate" required placeholder="MM-DD-YYYY" />
                <br>
                <br>
                <br>
                <label>Trip Name:</label>
                <input type='text' id='tripname' name="tripname" required placeholder="Great Lake Trail" />
                <br>
                <br>
                <br>
                <button type="submit" value="Submit">Add Trip</button>
          </form> 
    
          </div>
     
      </div>
      <div class="jumbotron">
      <h1>Trips</h1>
      <div class="table-responsive">
        <table class="table table-striped table">
          <thead>
            <tr>
              <th scope="col">ID:</th>
              <th scope="col">Destination ID:</th>
              <th scope="col">Transportation</th>
              <th scope="col">Start Date</th>
              <th scope="col">End Date</th>
              <th scope="col">Trip Name</th>
            </tr>
          </thead>
      <tbody>
          <% locals.my_result.trip.map(function(trip){ %>
            <tr>
              <form action="/edit_trip" method="POST">
                <td><input type='text' id='id' name="id" value="<%= trip.id %>" /></td>
                <td><input type='text' id='destinationid' name="destinationid" value="<%= trip.destinationid %>" /></td>
                <td><input type='text' id= 'transportation' name="transportation" value="<%= trip.transportation %>"/></td>
                <td><input type='text' id='startdate' name="startdate" value="<%= trip.startdate %>"/></td>
                <td><input type='text' id='enddate' name="enddate" value="<%= trip.enddate %>"  /></td>
                <td><input type='text' id='tripname' name="tripname" value="<%= trip.tripname %>"/></td>

                <td><input type="submit" type="button" class="btn btn-secondary" value="Edit" /></td>
              </form>
              <form action="/delete_trip" method="POST">
                <td>
                  <input type='hidden' id='id' name="id" required value="<%= trip.id %>" />
                  <input type="submit" class="btn btn-danger" value="Delete" />
                </td>
              </form>
            </tr>
    </div>
    <% }) %>
      </tbody>
      </table>
      </div>
      
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>